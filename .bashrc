alias v="vi"
alias ta="tmux a"
alias sr="source ~/.bashrc"
alias vr="vi ~/.bashrc"
alias ls='ls -A'

#easier nav
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# disable terminal lock
stty -ixon

alias df='df -h'
alias du='du -h'
alias grep='grep --color'                     # show differences in colour
alias dir='ls --color=auto --format=vertical'
